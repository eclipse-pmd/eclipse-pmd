<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="ch.acanda.eclipse.pmd.core.auxclasspath" name="PMD Auxiliary Classpath Provider" schema="schema/ch.acanda.eclipse.pmd.core.auxclasspath.exsd"/>

   <extension
         id="ch.acanda.eclipse.pmd.builder.PMDBuilder"
         name="PMD Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="true">
         <run
               class="ch.acanda.eclipse.pmd.builder.PMDBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="ch.acanda.eclipse.pmd.builder.PMDNature"
         name="PMD Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="ch.acanda.eclipse.pmd.builder.PMDNature">
         </run>
      </runtime>
      <builder
            id="ch.acanda.eclipse.pmd.builder.PMDBuilder">
      </builder>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="pmdMarker"
         name="PMD Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         id="pmdLongMarker"
         name="PMD Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="ch.acanda.eclipse.pmd.core.pmdMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerImageProviders">
      <imageprovider
            icon="/icons/warning.gif"
            id="ch.acanda.eclipse.pmd.core.imageprovider.pmdMarker"
            markertype="ch.acanda.eclipse.pmd.core.pmdMarker">
      </imageprovider>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="ch.acanda.eclipse.pmd.properties.PMDPropertyPage"
            id="ch.acanda.eclipse.pmd.properties.PMDPropertyPage"
            name="PMD"
            nameFilter="*">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.open"
                     value="true">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerType="ch.acanda.eclipse.pmd.core.pmdMarker"
            name="ch.acanda.eclipse.pmd.core.pmdAnnotation">
      </type>
      <type
            markerType="ch.acanda.eclipse.pmd.core.pmdLongMarker"
            name="ch.acanda.eclipse.pmd.core.pmdLongAnnotation">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="ch.acanda.eclipse.pmd.core.pmdAnnotation"
            colorPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.color"
            colorPreferenceValue="244,200,45"
            contributesToHeader="true"
            highlightPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.highlight"
            highlightPreferenceValue="false"
            includeOnPreferencePage="true"
            isGoToNextNavigationTarget="true"
            isGoToNextNavigationTargetKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.goToNext"
            isGoToPreviousNavigationTarget="true"
            isGoToPreviousNavigationTargetKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.goToPrev"
            label="PMD Violations"
            overviewRulerPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.overviewRuler"
            overviewRulerPreferenceValue="true"
            showInNextPrevDropdownToolbarAction="true"
            showInNextPrevDropdownToolbarActionKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.nextPrevToolbar"
            symbolicIcon="warning"
            textPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.text"
            textPreferenceValue="true"
            textStylePreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.textStyle"
            textStylePreferenceValue="PROBLEM_UNDERLINE"
            verticalRulerPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.verticalRuler"
            verticalRulerPreferenceValue="true">
      </specification>
      <specification
            annotationType="ch.acanda.eclipse.pmd.core.pmdLongAnnotation"
            colorPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.color"
            colorPreferenceValue="244,200,45"
            contributesToHeader="true"
            highlightPreferenceKey="ch.acanda.eclipse.pmd.core.pmdLongAnnotation.highlight"
            highlightPreferenceValue="false"
            includeOnPreferencePage="false"
            isGoToNextNavigationTarget="true"
            isGoToNextNavigationTargetKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.goToNext"
            isGoToPreviousNavigationTarget="true"
            isGoToPreviousNavigationTargetKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.goToPrev"
            label="PMD Violations (multiline)"
            overviewRulerPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.overviewRuler"
            overviewRulerPreferenceValue="true"
            showInNextPrevDropdownToolbarAction="true"
            showInNextPrevDropdownToolbarActionKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.nextPrevToolbar"
            symbolicIcon="warning"
            textPreferenceKey="ch.acanda.eclipse.pmd.core.pmdLongAnnotation.text"
            textPreferenceValue="false"
            textStylePreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.textStyle"
            textStylePreferenceValue="PROBLEM_UNDERLINE"
            verticalRulerPreferenceKey="ch.acanda.eclipse.pmd.core.pmdAnnotation.verticalRuler"
            verticalRulerPreferenceValue="true">
      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="ch.acanda.eclipse.pmd.preferences.PMDPreferencePage"
            id="ch.acanda.eclipse.pmd.preferences.PMDPreferencePage"
            name="PMD">
      </page>
   </extension>

</plugin>
