{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignoreDeps": [
    "io.github.apex-dev-tools:apex-ls_2.13"
  ],
  "packageRules": [
    {
      "matchDepNames": ["^net.bytebuddy:.*"],
      "groupName": "Byte Buddy dependencies"
    }
  ],
  "customManagers": [
    {
        "customType": "regex",
        "fileMatch": ["(.classpath|MANIFEST.MF|build.properties)"],
        "matchStrings": [
            "lib/(?<artifact>byte-buddy(-agent)?)-(?<currentValue>\\d+(\\.\\d+)*?).jar"
        ],
        "depNameTemplate": "net.bytebuddy:{{{artifact}}}",
        "datasourceTemplate": "maven"
    },
    {
        "customType": "regex",
        "fileMatch": ["(.classpath|MANIFEST.MF|build.properties)"],
        "matchStrings": [
            "lib/mockito-core-(?<currentValue>\\d+(\\.\\d+)*)(-sources)?.jar"
        ],
        "depNameTemplate": "org.mockito:mockito-core",
        "datasourceTemplate": "maven"
    },
    {
        "customType": "regex",
        "fileMatch": ["(.classpath|MANIFEST.MF|build.properties)"],
        "matchStrings": [
            "lib/guava-(?<currentValue>\\d+(\\.\\d+)*-jre(-sources)?).jar"
        ],
        "depNameTemplate": "com.google.guava:guava",
        "datasourceTemplate": "maven"
    }
  ]
}
