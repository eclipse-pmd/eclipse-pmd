<?xml version="1.0" encoding="UTF-8"?>
<tests>
    <pmdReferenceId>category/java/errorprone.xml/EmptyStatementBlock</pmdReferenceId>
    <language>java 1.7</language>

    <test name="EmptyStatementBlock">
        <setup>
            <source>
class Example {
    void foo() {
        <marker>{}</marker>
    }
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
    void foo() {
    }
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the statement block</label>
            <description>Removes the empty statement block.</description>
        </expected>
    </test>

</tests>
