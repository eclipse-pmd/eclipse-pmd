<?xml version="1.0" encoding="UTF-8"?>
<tests>
    <pmdReferenceId>category/java/errorprone.xml/EmptyIfStmt</pmdReferenceId>
    <language>java 1.7</language>

    <test name="EmptyIfStmt">
        <setup>
            <source>
class Example {
    void foo() {
        if (1 != 2) <marker>{
        }</marker>
    }
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
    void foo() {
    }
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the if statement</label>
            <description>Removes the empty if statement.</description>
        </expected>
    </test>

</tests>
