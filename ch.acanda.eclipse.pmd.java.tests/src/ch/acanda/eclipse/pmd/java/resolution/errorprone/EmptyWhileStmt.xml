<?xml version="1.0" encoding="UTF-8"?>
<tests>
    <pmdReferenceId>category/java/errorprone.xml/EmptyWhileStmt</pmdReferenceId>
    <language>java 1.7</language>

    <test name="EmptyWhileStmt">
        <setup>
            <source>
class Example {
    void foo() {
        while (1 != 2) <marker>{
        }</marker>
    }
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
    void foo() {
    }
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the while statement</label>
            <description>Removes the empty while statement.</description>
        </expected>
    </test>

</tests>
