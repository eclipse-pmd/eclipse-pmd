<?xml version="1.0" encoding="UTF-8"?>
<tests>
    <pmdReferenceId>category/java/errorprone.xml/EmptyInitializer</pmdReferenceId>
    <language>java 1.7</language>

    <test name="EmptyInitializer">
        <setup>
            <source>
class Example {
    <marker>{}</marker>
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the initializer</label>
            <description>Removes the empty initializer.</description>
        </expected>
    </test>

    <test name="EmptyStaticInitializer">
        <setup>
            <source>
class Example {
    static <marker>{}</marker>
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the initializer</label>
            <description>Removes the empty initializer.</description>
        </expected>
    </test>

</tests>
