<?xml version="1.0" encoding="UTF-8"?>
<tests>
    <pmdReferenceId>category/java/errorprone.xml/EmptySwitchStatements</pmdReferenceId>
    <language>java 1.7</language>

    <test name="EmptySwitchStatements">
        <setup>
            <source>
class Example {
    void foo() {
        <marker>switch (1) {
        }</marker>
    }
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
    void foo() {
    }
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the switch statement</label>
            <description>Removes the empty switch statement.</description>
        </expected>
    </test>

</tests>
